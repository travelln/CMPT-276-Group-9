<!--Name:Education page -->

<!--Purpose:
  to show informatin about the change in amount paid for education as a function of time
-->

<!--Description:
  This page provides information about how payment for education has changed over time,
  particularly assistance payments and post-secondary education withdrawals. It shows this
  through the use of two graphs, one for each idea. The graphs show the growth in their
  particular areas plotted as a line, giving the idea of a general function that could
  be used to compute the data.
-->

<% provide(:title, "Education") %>

<!--This is the education page of myCanada app-->

  <h1>Education</h1>



<div id='education1', style='width:870px; height:710px'>
  <script>
  $(document).ready(function() {
    chart = new Highcharts.Chart({
      chart: {
            renderTo: 'education1',
            type: 'line',
            plotBackgroundColor: '#CCFFFF'
        },

        title: {
          text: 'Education Assistance Payments by Year ($ million) '
        },
        subtitle: {
          text: 'Source: <a href="http://open.canada.ca/data/en/dataset/bd043d94-ba24-4e88-8bc5-1d871e8c83ea">' +
            'Canada Open Data'
        },

        xAxis: {
            categories: <%= @vec[1] %>
        },

        series: [{
            name: 'Payments',
            data: <%= @vec[2] %>
        }]
    });
  });
</script>
</div>

<div id='education2', style='width:870px; height:710px'>
  <script>
  $(document).ready(function() {
    chart = new Highcharts.Chart({
      chart: {
            renderTo: 'education2',
            type: 'line',
            plotBackgroundColor: '#CCFFFF'
        },

        title: {
          text: 'Post-Secondary Education Withdrawals ($ million)'
        },
        subtitle: {
          text: 'Source: <a href="http://open.canada.ca/data/en/dataset/bd043d94-ba24-4e88-8bc5-1d871e8c83ea">' +
            'Canada Open Data'
        },

        xAxis: {
            categories: <%= @vec[1] %>
        },

        series: [{
            name: 'Withdrawals',
            data: <%= @vec[3] %>
        }]
    });
  });
</script>
</div>

</body>
</html>
